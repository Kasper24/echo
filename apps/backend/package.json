{
  "name": "backend",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch --env-file=.env.dev ./src/index.ts",
    "build": "tsc",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --detectOpenHandles",
    "lint:types": "tsc --noEmit",
    "lint:check": "eslint --max-warnings=0 \"src/**/*.{js,jsx,ts,tsx,json}\"",
    "lint:fix": "eslint --fix \"src/**/*.{js,jsx,ts,tsx,json}\""
  },
  "jest": {
    "preset": "@repo/jest-presets/node",
    "moduleNameMapper": {
      "^@repo/backend/(.*)$": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/jest.setup.ts"
    ]
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.2.17",
    "@repo/database": "*",
    "argon2": "^0.41.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.40.0",
    "express": "^5.0.1",
    "express-rate-limit": "^7.5.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "redis": "^4.7.0",
    "twilio": "^5.4.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@repo/eslint-config": "*",
    "@repo/jest-presets": "*",
    "@repo/typescript-config": "*",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.5",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.20.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.3",
    "typescript": "5.7.3"
  }
}
